@model List<ABCRetailWebApp.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<p>
    <a asp-action="CreateProduct" class="btn btn-success">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    <a href="@Url.RouteUrl("EditProductRoute", new { id = product.id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.RouteUrl("DeleteProductRoute", new { id = product.id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
