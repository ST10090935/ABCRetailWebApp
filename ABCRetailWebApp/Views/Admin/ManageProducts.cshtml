@model List<ABCRetailWebApp.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<p>
    <a asp-action="CreateProduct" class="btn btn-success">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.id" class="btn btn-warning">Edit</a>

                    <form asp-action="DeleteProduct" asp-controller="Admin" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@product.id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
