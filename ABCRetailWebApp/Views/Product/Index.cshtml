@model List<ABCRetailWebApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
