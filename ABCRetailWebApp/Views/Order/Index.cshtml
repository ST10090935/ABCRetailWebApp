@model List<ABCRetailWebApp.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>
<a href="/Order/create" class="btn btn-primary">Create New Order</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.id</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate</td>
                <td>@order.Status</td>
                <td>
                    <a href="/Order/details/@order.id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
