@model ABCRetailWebApp.Models.Order

@{
    ViewData["Title"] = "Place Order";
}

<h2>Place Order</h2>

<form asp-action="CreateOrder" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="CustomerName" />

    <h4>Customer Information</h4>
    <p>
        <strong>Name:</strong> @Model.CustomerName
    </p>

    <h4>Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        <input type="hidden" name="Products[0].id" value="@product.id" />
                        <input type="hidden" name="Products[0].Name" value="@product.Name" />
                        @product.Name
                    </td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px;" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Confirm Order</button>
    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
</form>
